<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.carrentalba2a.controller.CheckoutController"
      spacing="15" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="vehicleInfoLabel" wrapText="true" maxWidth="700"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Number of Days:"/>
        <TextField fx:id="daysField" text="0" prefWidth="100"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Number of Hours:"/>
        <TextField fx:id="hoursField" text="0" prefWidth="100"/>
    </HBox>

    <Button text="Calculate Price" onAction="#handleCalculate"/>
    <Label fx:id="priceLabel" text="Total Price: 0 EGP" style="-fx-font-size: 16px;"/>

    <Button text="Confirm Rental" prefWidth="200" onAction="#handleConfirm"/>
    <Button text="Back" prefWidth="200" onAction="#handleBack"/>
</VBox>