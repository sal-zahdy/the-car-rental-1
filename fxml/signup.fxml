<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.carrentalba2a.controller.SignUpController"
      spacing="15" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Create New Account" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Full Name" maxWidth="300"/>
    <TextField fx:id="usernameField" promptText="Username (ID)" maxWidth="300"/>
    <TextField fx:id="phoneField" promptText="Phone Number" maxWidth="300"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"/>

    <Button text="Create Account" prefWidth="300" onAction="#handleSignUp"/>
    <Button text="Back to Login" prefWidth="300" onAction="#handleBack"/>
</VBox>