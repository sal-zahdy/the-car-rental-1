<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.carrentalba2a.controller.RentalController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <top>
        <VBox spacing="10">
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button text="Back to Dashboard" onAction="#handleBack"/>
                <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER">
                <Label text="Filter:"/>
                <ComboBox fx:id="filterBox" prefWidth="150"/>
                <Label text="Sort:"/>
                <ComboBox fx:id="sortBox" prefWidth="150"/>
                <Button text="Apply" onAction="#handleApplyFilter"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ListView fx:id="vehicleListView"/>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="10" right="0" bottom="0" left="0"/>
            </padding>
            <Button text="Rent Selected Vehicle" prefWidth="200" onAction="#handleRent"/>
        </HBox>
    </bottom>
</BorderPane>