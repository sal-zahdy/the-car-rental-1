<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.carrentalba2a.controller.ProfileController"
      spacing="15" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="My Profile" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextArea fx:id="profileInfoArea" editable="false" prefHeight="150" maxWidth="400"/>
    <Label fx:id="statsLabel"/>

    <Label text="Edit Information:" style="-fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Name" maxWidth="300"/>
    <TextField fx:id="phoneField" promptText="Phone" maxWidth="300"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="300"/>

    <Button text="Save Changes" prefWidth="300" onAction="#handleSave"/>
    <Button text="Back to Dashboard" prefWidth="300" onAction="#handleBack"/>
</VBox>